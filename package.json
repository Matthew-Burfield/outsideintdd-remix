{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint . --ext .js,.ts,.tsx --fix",
    "cypress": "cypress open",
    "postinstall": "remix setup node",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "dev": "cross-env NODE_ENV=development npm run build:css && remix build && run-p dev:*",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:node": "cross-env NODE_ENV=development nodemon ./build/index.js",
    "start": "cross-env NODE_ENV=production node ./build/index.js"
  },
  "dependencies": {
    "@remix-run/express": "^1.2.2",
    "@remix-run/react": "^1.2.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.2",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.19.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "msw": "^0.38.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
